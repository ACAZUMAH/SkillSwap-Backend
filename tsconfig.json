{
  "compilerOptions": {
    "jsx": "react",
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "tests/*": ["tests/*"]
    },
    "types": ["node"],
    "resolveJsonModule": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/", "tests"],
  "ts-node": { "files": true }
}